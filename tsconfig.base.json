{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES6",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@voice-chat/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@voice-chat/user-interfaces": ["libs/user-interfaces/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
